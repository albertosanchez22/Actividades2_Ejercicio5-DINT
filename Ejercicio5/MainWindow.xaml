        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Margin="49,90,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="213" Height="127" TextChanged="Input_TextChanged"/>
