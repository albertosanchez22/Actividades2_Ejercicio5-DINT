        <CheckBox Content="Negrita" HorizontalAlignment="Left" Margin="329,107,0,0" VerticalAlignment="Top" FontWeight="Bold"  Checked="CheckBox_Checked_1" Unchecked="CheckBox_Uncheked_1"/>
        <CheckBox Content="Cursiva" HorizontalAlignment="Left" Margin="446,107,0,0" VerticalAlignment="Top"  Checked="CheckBox_Checked" Unchecked="CheckBox_Uncheked" FontStyle="Italic"/>
        <RadioButton Content="Azul" HorizontalAlignment="Left" Margin="595,72,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked"/>
        <RadioButton Content="Rojo" HorizontalAlignment="Left" Margin="595,107,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked_1"/>
        <RadioButton Content="Verde" HorizontalAlignment="Left" Margin="595,142,0,0" VerticalAlignment="Top" Checked="RadioButton_Checked_2"/>
        <TextBlock x:Name="Resultado" TextTrimming="CharacterEllipsis" HorizontalAlignment="Left" Margin="74,293,0,0" Text="a" TextWrapping="Wrap" VerticalAlignment="Top" Height="79" Width="663" Foreground="Black" Background="#FFCCF3CB"/>

    </Grid>
</Window>
